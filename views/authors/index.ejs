<h2 class="page-header">Search Authors</h2>
<form action="/authors" method="GET">
<label >Name</label>
<input type="text" name="name" value="<%=searchOptions.name%>">
<button type="submit">Search</button>
</form>
<br>
<% authors.forEach(element => { %> 
     <div><%=element.name %></div>
     <div class="btn-row">
     <a  class="btn btn-primary" href="/authors/<%=element.id%> ">View</a>
     <a class="btn btn-primary" href="/authors/<%=element.id%>/edit ">Edit</a>
     <%- include('../partials/deleteForm',{url:`/authors/${element.id}`}) %> 
</div>
<%});%> 